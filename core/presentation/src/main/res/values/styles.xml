<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextValue_B">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/apple_sd_gothic_neo_b</item>
    </style>

    <style name="TextValue_B_White">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/apple_sd_gothic_neo_b</item>
    </style>

    <style name="TextValue_R">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/apple_sd_gothic_neo_r</item>
    </style>

    <style name="TextValue_L">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/apple_sd_gothic_neo_r</item>
    </style>

    <style name="TextValue_EB">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/apple_sd_gothic_neo_eb</item>
    </style>

    <style name="TextValue_EB_white">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/apple_sd_gothic_neo_eb</item>
    </style>

    <style name="TextValue_M">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/apple_sd_gothic_neo_m</item>
    </style>

    <style name="TabTextStyle_B" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/apple_sd_gothic_neo_b</item>
        <!-- Add more attributes if needed -->
    </style>

    <style name="LoginEditText" parent="TextValue_M">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/login_input_marginHorizontal</item>
        <item name="android:background">@drawable/rectangle_white_r50</item>
        <item name="android:padding">@dimen/login_input_padding</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="LoginButton" parent="TextValue_B">
        <item name="android:layout_width">@dimen/login_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/login_button_marginHorizontal</item>
        <item name="android:background">@drawable/rectangle_black_r20</item>
        <item name="android:text">@string/do_login</item>
    </style>
</resources>